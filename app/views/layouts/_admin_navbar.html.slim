      li.dropdown
        = link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do
          = decorated_current_user.avatar size: :tiny, margin: nil
          b.caret
        ul.dropdown-menu
          li = link_to "Mi perfil", edit_admin_user_path(current_user)
